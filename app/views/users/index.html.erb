<div class="container">

  <h1>Cuidadores próximos a você</h1>

  <% @caregivers.each do |caregiver| %>
    <p><%= caregiver.first_name %></p>
    <p><%= caregiver.last_name %></p>
    <p><%= caregiver.email %></p>
    <p><%= caregiver.address %></p>
    <p><%= link_to "ver", user_path(caregiver) %> </p>
  <% end %>

  <div
  id="map"
  style="width: 50%;
  height: 600px;"
  data-markers="<%= @markers.to_json %>"
  ></div>

  <p><%= link_to 'home', root_path %></p>




</div>
